@model MovieApp.Entity.UserModel
@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>
<hr />

<div class="container">
<form method="post"> 
    <div class="form-group">
        <label class="col-sm-3">Email</label>
        <input type="text" class="form-control" asp-for="Email"/>
    </div>
    <div class="form-group">
        <label class="col-sm-3">Password</label>
        <input type="text" class="form-control" asp-for="Password"/>
    </div>
    <div class="form-group col-sm-3">
    <input  type="submit"  value="Login" class="btn btn-lg btn-block btn-primary"/>
    </div>
    <div>
        @if (ViewBag.status == "Error")
    {
        <div class="alert alert-danger">
            @ViewBag.message
        </div>
    }
    </div>
    
    <div>
    <h6>Not Having Account ? SignUp-in here </h6>
    <a asp-controller="User" asp-action="RegisterUser" class="btn btn-group-sm btn-outline-primary">SignUp</a>
    </div>
</form>
</div>
 

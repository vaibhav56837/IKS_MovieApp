@model MovieApp.Entity.UserModel

<a asp-action="ShowUserDetails" asp-controller="User">User-Details</a>
<hr />
<h1>Register-User</h1>
<div class="container">
    <form method="post">
    <div class="form-group">
        <label  for="Firstname" class="col-sm-3">Firstname</label>
        <input type="text" class="form-control" asp-for="Firstname">
    </div>
    <div class="form-group">
        <label for="Firstname" class="col-sm-3">Lastname</label>
        <input type="text" class="form-control" asp-for="Lastname">
    </div>
    <div class="form-group">
        <label for="Firstname" class="col-sm-3">Email</label>
        <input type="text" class="form-control" asp-for="Email">
    </div>
    <div class="form-group">
        <label for="Firstname" class="col-sm-3">Password</label>
        <input type="text" class="form-control" asp-for="Password">
    </div>
    <div class="form-group">
        <label for="Firstname" class="col-sm-3">Mobile</label>
        <input type="text" class="form-control" asp-for="Mobile">
    </div>
    <div class="form-group col-sm-3">
      <input type="submit" class="btn btn-lg btn-block btn-primary" value="Register">
    </div>
    <div>
      <button type="button" class="btn btn-secondary">Reset</button>
    </div>
    
    <hr />
    @if (ViewBag.status == "Ok")
    {
        <div class="alert alert-success">
            @ViewBag.message
        </div>
    }
    else if (ViewBag.status == "Error")
    {
        <div class="alert alert-danger">
            @ViewBag.message
        </div>
    }
    <hr />
    <a asp-controller="User" asp-action="UserLogin">Login</a>
</form>
</div>

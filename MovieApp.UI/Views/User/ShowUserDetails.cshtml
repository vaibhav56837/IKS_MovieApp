@model IEnumerable<MovieApp.Entity.UserModel>
@{
    ViewData["Title"] = "ShowUserDetails";
}

<h1>ShowUserDetails</h1>
<hr />
<h1>User table</h1>

<div class="container row p-0 m-0">
    <div class="col-12 border p-3 mt-3">
    <table class="table table-hover table-dark">
        <thead class="table table-bordered table-striped text-center">
            <tr class="table-secondary">
              <th>UserId</th>
              <th>FirstName</th>
              <th>LastName</th>
              <th>Email</th>
              <th>MobileNumber</th>
              <th>Edit</th>
              <th>Delete</th>
            </tr>
        </thead>
        <tbody class="table table-bordered table-striped">
           
            @foreach (var item in Model)
            {
                        <tr class="table-secondary">
                            <td>@item.UserId</td>
                            <td>@item.Firstname</td>
                            <td>@item.Lastname</td>
                            <td>@item.Email</td>
                            <td>@item.Mobile</td>
                            <td><a asp-action="UpdateUserDetails" asp-controller="User" asp-route-UserId="@item.UserId">Edit-User</a></td>
                            <td><a asp-action="DeleteUserDetails" asp-controller="User" asp-route-UserId="@item.UserId">Delete-User</a></td>
                        </tr>   
            }
         </tbody>
    </table>  
    
   </div>
 </div>
@model MovieApp.Entity.TheatreModel
@{
    ViewData["Title"] = "Register";
}

<h1>Add-Theatre-Data</h1>
<hr />

<form method="post"> 
    <div class="form-group">
        <label>Theatre-Name</label>
        <input type="text" class="form-control" asp-for="tName" />
    </div>
     <div class="form-group">
        <label>Theatre-Capacity</label>
        <input type="text" class="form-control" asp-for="tCapacity" />
    </div>
     <div class="form-group">
        <label>Theatre-Class</label>
        <input type="text" class="form-control" asp-for="tClass" />
    </div>
     <div class="form-group">
        <label>Theatre-Location</label>
        <input type="text" class="form-control" asp-for="tLocation" />
    </div>
    <div class="form-group">
        <label>Theatre-Address</label>
        <input type="text" class="form-control" asp-for="tAddress" />
    </div>
    <input  type="submit"  value="Add-Details" class="btn btn-primary"/>
    <input   type="button"  value="Reset"   class="btn btn-secondary"/>
    <hr />
    @if(ViewBag.status=="Success")
    {
        <div class="alert alert-success">
            @ViewBag.message
        </div>
    }
   else if(ViewBag.status=="Error")
    {
        <div class="alert alert-danger">
            @ViewBag.message
        </div>
    }
</form>



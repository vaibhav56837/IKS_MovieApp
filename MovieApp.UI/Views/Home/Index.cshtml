@model IEnumerable<MovieApp.Entity.MovieModel>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to MyMovieAPP</h1>
   <hr />
</div>
<div class="row">
     @foreach(var item in Model){
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">@item.MovieName</div>
            <div class="card-body">
                <ul>
                   <li> @item.MovieName</li>  
                   <li>@item.MovieDescription </li> 
                   <li>@item.MovieType </li>
                   <li>@item.MovieLanguage </li> 
                </ul>
            </div>
            <div class="card-footer">
            <a asp-action="BookingReg" asp-controller="Booking" asp-route-MovieId="@item.MovieId" class="btn btn-primary">Book</a>
            </div>
        </div>
    </div>
     }
</div>